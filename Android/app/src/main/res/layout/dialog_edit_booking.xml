<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <EditText
            android:id="@+id/editTextBookingId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Booking ID"
            android:inputType="number"
            android:visibility="gone" /> <!-- Hidden as most UIs don't usually allow editing IDs -->

        <DatePicker
            android:id="@+id/dpBookingDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Booking Date"/>


        <EditText
            android:id="@+id/editTextBookingNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Booking No." />

        <EditText
            android:id="@+id/editTextTravelerCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Traveler Count"
            android:inputType="number" />

        <TextView
            android:id="@+id/tvLabelCustomer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer ID:"
            android:paddingEnd="15dp"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spinnerCustomerId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="15dp"
            android:prompt="@string/select_customer_id" />

        <TextView
            android:id="@+id/tvLabelTripType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TripType ID:"
            android:paddingEnd="15dp"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spinnerTripTypeId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="15dp"
            android:prompt="@string/select_trip_type_id" />

        <TextView
            android:id="@+id/tvLabelPackage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Package ID:"
            android:paddingEnd="15dp"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spinnerPackageId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="15dp"
            android:prompt="@string/select_package_id" />

    </LinearLayout>
</ScrollView>
